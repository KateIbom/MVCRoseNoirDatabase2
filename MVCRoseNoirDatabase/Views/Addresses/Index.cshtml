@model IEnumerable<MVCRoseNoirDatabase.Models.Address>

@{
    ViewData["Title"] = "Customer Address";
}

<h1>Address details</h1>
<p class="lead">
    This page lists all the current Rose Noir products and
    allow staff to edit existing products of creating new ones
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr class="bg-light">
            <th>
                @Html.DisplayNameFor(model => model.AddressType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.County)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.County)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                    <a class="btn btn-success p-2" asp-action="Edit" asp-route-id="@item.AddressId">Edit</a> |
                    <a class="btn btn-outline-info p-2" asp-action="Details" asp-route-id="@item.AddressId">Details</a> |
                    <a class="btn btn-danger p-2" asp-action="Delete" asp-route-id="@item.AddressId">Delete</a>
            </td>      
        </tr>
        
}
    </tbody>
</table>
<p>
     <a class="btn btn-outline-success" asp-action="Create">Add New</a>
</p>
